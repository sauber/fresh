{
  "name": "Deno",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "settings": {
    "deno.config": "./deno.json",
    "deno.enable": true,
    "deno.lint": true,
    "editor.defaultFormatter": "denoland.vscode-deno",
    "[typescriptreact]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[typescript]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascriptreact]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascript]": {
      "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[css]": {
      "editor.defaultFormatter": "vscode.css-language-features"
    }
  },

  "extensions": [
    "denoland.vscode-deno",
    "akil-s.tokyo-light"
  ],

  "remoteUser": "vscode",
  "forwardPorts": [8000]
}
